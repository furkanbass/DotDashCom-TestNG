<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="running cross browser class">
    <test name="Cross browser chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="tests.crossBrowser.AssertionsCross"></class>
            <class name="tests.crossBrowser.C07_SoftAssertCross"></class>
        </classes>

    </test>
    <test name="Cross browser firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="tests.crossBrowser.AssertionsCross"></class>
            <class name="tests.crossBrowser.C07_SoftAssertCross"></class>
        </classes>

    </test>

</suite>